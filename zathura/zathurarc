#{{{ Colours
set default-bg                  "#282C34"
set default-fg                  "#5C6370"

set statusbar-bg                "#2C323C"
set statusbar-fg                "#5C6370"

set inputbar-bg                 "#2C323C"
set inputbar-fg                 "#5C6370"

set notification-bg             "#282a36"
set notification-fg             "#f0f0f0"

set notification-error-bg       "#282a36"
set notification-error-fg       "#ff5c57"

set notification-warning-bg     "#282a36"
set notification-warning-fg     "#ff5c57"

set highlight-color             "#f3f99d"
set highlight-active-color      "#57c7ff"

set completion-bg               "#2C323C"
set completion-fg               "#5C6370"

set completion-group-bg         "#2C323C"
set completion-group-fg         "#5C6370"

set completion-highlight-bg     "#61AFEF"
set completion-highlight-fg     "#2C323C"

set recolor-lightcolor          "#282C34"
set recolor-darkcolor           "#5C6370"

set recolor                     "true"
set recolor-keephue             "false"
#}}}


#{{{ Layout
set incremental-search          "false"
set statusbar-home-tilde        "true"
set statusbar-v-padding          10
set statusbar-h-padding          10
set adjust-open                 "width"
set first-page-column           2
set window-title-basename       "true"
#}}}


#{{{ Other Options
set font                        "DejaVu Sans Mono for Powerline 11"
set scroll-page-aware           "true"
set smooth-scroll               "true"
set scroll-step                 50
set selection-clipboard         clipboard
set database                    "plain"
#}}}

#{{{ Key bindings
map <PageUp>    scroll full_up
map <PageDown>  scroll full_down
map <BackSpace> scroll full_up all
map <M-v>       scroll full_up
map <C-v>       scroll full_down

map + zoom in
map - zoom out
map q quit
map w adjust_window width
map z adjust_window bestfit

map <Space>   navigate next
map <S-Space> navigate previous
map b toggle_statusbar

map <C-g> abort
#}}}


